<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants execute access to survey regeneration functionality. Assign to admins who need to regenerate survey links and invitations when templates are updated.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>SurveyForce Survey Regeneration Execute</label>
    <license>Salesforce</license>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>SurveyRegenerationController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <!-- Object Permissions - Training Request -->
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Training_Request__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Field Permissions - Training Request Survey Fields -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Training_Request__c.Participant_Survey__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Training_Request__c.Customer_Survey__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Training_Request__c.Trainer_Survey__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Training_Request__c.Training_Type__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Object Permissions - Survey Invitation -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>SurveyInvitation__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Field Permissions - Survey Invitation -->
    <fieldPermissions>
        <editable>true</editable>
        <field>SurveyInvitation__c.Survey__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SurveyInvitation__c.Token__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SurveyInvitation__c.Status__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SurveyInvitation__c.Email__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SurveyInvitation__c.ParticipantName__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SurveyInvitation__c.RelatedRecordId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Object Permissions - Survey -->
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Survey__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Object Permissions - Participants -->
    <objectPermissions>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Participants__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Field Permissions - Participants -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Participants__c.Training_Request__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Participants__c.Participant_Survey__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Participants__c.Participant_Name__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Participants__c.Email__c</field>
        <readable>true</readable>
    </fieldPermissions>
</PermissionSet>
